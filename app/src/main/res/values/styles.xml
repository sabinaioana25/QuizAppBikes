<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="image_bike_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/margin_bottom</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:src">@drawable/bike4</item>
    </style>

    <style name="quiz_description_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:text">@string/app_description</item>
        <item name="android:layout_marginBottom">@dimen/margin_bottom_2</item>
        <item name="android:layout_marginTop">@dimen/margin_top</item>
        <item name="android:layout_marginLeft">@dimen/margin_left</item>
        <item name="android:layout_marginRight">@dimen/margin_right</item>
        <item name="android:lineSpacingExtra">@dimen/line_spacing</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_2</item>
    </style>

    <style name="edit_text_description_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/margin_bottom</item>
        <item name="android:layout_marginTop">@dimen/margin_top</item>
        <item name="android:layout_marginLeft">@dimen/margin_left</item>
        <item name="android:layout_marginRight">@dimen/margin_right</item>
        <item name="android:inputType">textCapWords</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:hint">@string/hint</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="start_button_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/margin_bottom</item>
        <item name="android:layout_marginTop">@dimen/margin_top</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:text">@string/btn_start</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/text_white</item>
    </style>

    <style name="lets_start_text_view_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">@dimen/padding_bottom</item>
        <item name="android:paddingTop">@dimen/padding_top</item>
        <item name="android:paddingLeft">@dimen/padding_left</item>
        <item name="android:paddingRight">@dimen/padding_right</item>
        <item name="android:text">@string/lets_start</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_2</item>
    </style>

    <style name="question_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">@dimen/padding_bottom</item>
        <item name="android:paddingTop">@dimen/padding_top</item>
        <item name="android:paddingLeft">@dimen/padding_left</item>
        <item name="android:paddingRight">@dimen/padding_right</item>
        <item name="android:background">@color/colorPrimaryLight</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size</item>
    </style>

    <style name="radio_group_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:baselineAligned">false</item>
        <item name="android:layout_margin">@dimen/margin_left</item>
    </style>

    <style name="radio_button_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size</item>
    </style>

    <style name="check_box_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_top</item>
        <item name="android:layout_marginLeft">@dimen/margin_left</item>
        <item name="android:layout_marginRight">@dimen/margin_right</item>
        <item name="android:textSize">@dimen/text_size</item>
    </style>

    <style name="submit_button_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_top</item>
        <item name="android:layout_marginBottom">@dimen/margin_bottom_2</item>
        <item name="android:layout_marginLeft">@dimen/margin_left</item>
        <item name="android:layout_marginRight">@dimen/margin_right</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:lineSpacingExtra">@dimen/line_spacing</item>
        <item name="android:textColor">@color/text_white</item>
    </style>

    <style name="result_header_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_marginTop">@dimen/margin_top</item>
        <item name="android:layout_marginLeft">@dimen/margin_left</item>
        <item name="android:layout_marginRight">@dimen/margin_right</item>
        <item name="android:textSize">@dimen/text_size_2</item>
    </style>

    <style name="result_text_view_style">
        <item name="android:layout_width">@dimen/result_text_view_width</item>
        <item name="android:layout_height">@dimen/result_text_view_height</item>
        <item name="android:layout_marginLeft">@dimen/margin_left</item>
        <item name="android:layout_marginRight">@dimen/margin_right</item>
        <item name="android:layout_marginTop">@dimen/margin_top_2</item>
        <item name="android:layout_marginBottom">@dimen/margin_bottom_2</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">@dimen/text_size</item>
    </style>

    <style name="result_image_style">
        <item name="android:layout_width">@dimen/result_image_width</item>
        <item name="android:layout_height">@dimen/result_image_height</item>
        <item name="android:layout_marginTop">@dimen/margin_top_2</item>
        <item name="android:layout_marginLeft">@dimen/margin_left</item>
        <item name="android:layout_marginRight">@dimen/margin_right</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="restart_button_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_top_2</item>
        <item name="android:layout_marginBottom">@dimen/margin_bottom_2</item>
        <item name="android:layout_marginLeft">@dimen/margin_left</item>
        <item name="android:layout_marginRight">@dimen/margin_right</item>
        <item name="android:paddingRight">@dimen/padding_right</item>
        <item name="android:paddingLeft">@dimen/padding_left</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:lineSpacingExtra">@dimen/line_spacing</item>
        <item name="android:textColor">@color/text_white</item>
    </style>
</resources>
